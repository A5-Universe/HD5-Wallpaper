<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.CategoryActivity"
    android:background="@color/icon_yellow">

        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:background="@drawable/top_shape"
            android:layout_alignParentTop="true">
            <TextView
                android:id="@+id/catTitle"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/sansation_bold"
                android:gravity="center"
                android:text="@string/categories"
                android:textColor="@color/icon_yellow"
                android:textSize="@dimen/_20ssp"
                android:textStyle="bold"/>

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:background="@drawable/back"
                android:layout_marginLeft="@dimen/_15sdp"
                android:foregroundGravity="center"/>

        </RelativeLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/catRcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/adView"/>

    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="FULL_BANNER"
        ads:adUnitId="@string/bannerAdUnitId">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>